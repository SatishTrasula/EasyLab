<div class="container">
    
    <div class="form-group has-success"> 
    <label class="control-label col-sm-2" >Test</label>
    <div class="col-sm-6"> 
    <input type="text" class="form-control" name="title" value="<%= labTest.title %>">
    </div>
    </div>
    <div class="form-group has-success"> 
    <label class="control-label col-sm-2" >Doctor</label>
    <div class="col-sm-6"> 
    <select class="form-control" name="doctor">
    <% doctors.forEach(doctor => { %>
        <% if (doctor.id === labTest.doctor) { %>
            <option selected label="<%= doctor.name %>" value="<%= doctor.id %>">
        <% } else { %>
            <option label="<%= doctor.name %>" value="<%= doctor.id %>">
        <% } %>
    <% }) %>
    </select>
    </div>
    </div>
    <div class="form-group has-success"> 
    <label class="control-label col-sm-2" >Publish Date</label>
    <div class="col-sm-6"> 
    <input type="date" class="form-control" name="publishDate" value="<%= labTest.publishDate == null ? '' : labTest.publishDate.toISOString().split('T')[0] %>">
    </div>
    </div>
    <div class="form-group has-success"> 
    <label class="control-label col-sm-2" >Test Amount</label>
    <div class="col-sm-6"> 
    <input type="number" class="form-control" name="testAmount" value="<%= labTest.testAmount %>">
    </div>
    </div>
    <div class="form-group has-success"> 
        <div> <!-- class="form-item form-item-no-grow"> -->
        <label class="control-label col-sm-2" >Cover</label>
        <input type="file" name="cover1" class="filepond form-control"/>
         <script>
            FilePond.registerPlugin(
                FilePondPluginImagePreview,
                FilePondPluginImageResize,
                FilePondPluginFileEncode
            );

            FilePond.setOptions({
                stylePanelAspectRatio: 150/100,
                imageResizeTargetWidth: 100,
                imageResizeTargetHeight: 150
            });

            FilePond.parse(document.body);
        </script>
            
        </div>
        <div class="form-group has-success"> 
        <label class="control-label col-sm-2" >Description</label>
        <div class="col-sm-6"> 
        <textarea class="form-control" name="description"><%= labTest.description %></textarea>
        </div>
        </div>
    </div>
</div>    